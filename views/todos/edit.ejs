<%- include('../partials/header')%>

<form action="/todos/<%= todo.id%>?_method=PUT" method="POST">
    <input type="text" placeholder="edit" name="todo" value="<%=todo.todo%>">
    <button type="submit" class="update-btn">Update To-Do</button><br>
    <label>
        <input type="checkbox" name="done" <%=todo.done ? 'checked' : ''%> >
        Completed
    </label>
</form>

